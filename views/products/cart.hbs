<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"><!-- Add these links in the <head> section of your HTML file -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>

<style>
    * {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}
body {
	background: white;
	font-family: montserrat;
}
.wrapper {
	max-width: 1000px;
	margin: 0 auto;
}
.wrapper h1 {
	padding: 20px 0;
	text-align: center;
	text-transform: uppercase;
}
.project {
	display: flex;
}
.shop {
	flex: 75%;
}
.box {
	display: flex;
	width: 100%;
	height: 200px;
	overflow: hidden;
	margin-bottom: 20px;
	background: #fff;
	transition: all .6s ease;
	box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}
.box:hover {
	border: none;
	transform: scale(1.01);
}
.box img {
	max-width: 100%;
	object-fit: contain;

}
.content {
	padding: 20px;
	width: 100%;
	position: relative;
}
.content h3 {
	margin-bottom: 30px;
}
.content h4 {
	margin-bottom: 50px;
}
.btn-area {
	position: absolute;
	bottom: 20px;
	right: 20px;
	padding: 10px 25px;
	background-color: #3a71a9;
	color: white;
	cursor: pointer;
	border-radius: 5px;
}
.btn-area:hover {
	background-color: #76bfb6;
	color: #fff;
	font-weight: 600;
}
.unit input {
	width: 40px;
	padding: 5px;
	text-align: center;
}
.btn-area i {
	margin-right: 5px;
}
.right-bar {
	flex: 25%;
	margin-left: 20px;
	padding: 20px;
	height: 400px;
	border-radius: 5px;
	background: #fff;
	box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}
.right-bar hr {
	margin-bottom: 25px;
}
.right-bar p {
	display: flex;
	justify-content: space-between;
	margin-bottom: 30px;
	font-size: 20px;
}
.right-bar a {
	background-color: #76bfb6;
	color: #fff;
	text-decoration: none;
	display: block;
	text-align: center;
	height: 40px;
	line-height: 40px;
	font-weight: 900;
}
.right-bar i {
	margin-right: 15px;
}
.right-bar a:hover {
	background-color: #3972a7;
}
@media screen and (max-width: 700px) {
	.content h3 {
		margin-bottom: 15px;
	}
	.content h4 {
		margin-bottom: 20px;
	}
	.btn2 {
		display: none;
	}
	.box {
		height: 150px;
	}
	.box img {
		height: auto;
	}
}
@media screen and (max-width: 900px) {
	.project {
		flex-direction: column;
	}
	.right-bar {
		margin-left: 0;
		margin-bottom: 20px;
	}
}
@media screen and (max-width: 1250px) {
	.wrapper {
		max-width: 95%;
	}
}

.btn{
	background:#ffc107
}
</style>

<body>
    <div class="wrapper">
		<h1>Shopping Cart</h1>
		<div class="project">
			<div class="shop">

				 {{#each cartData}}
				<div class="box">
					<img src="/images/{{this.product.image}}" style="height:100px;width:100px">
					<div class="content">
						<h3>{{this.product.productname}}</h3>
						<h4>Price: {{this.product.price}}</h4>

        				<div class="container" style="display: flex;"> 
						<p style="color: black;" class="unit" >Quantity: </p>
						<a href="#" class="btn" onclick="updateCartQuantity('{{this.product._id}}', -1);return false;">-</a>
						<input style="width: 50px; text-align:center; font-size:2rem;" name="" class="" id="{{this.product._id}}" value="{{quantity}}" >
						<a href="#" class="btn" onclick="updateCartQuantity('{{this.product._id}}', 1); return false;">+</a> </div>
						<p class="btn-area"><a aria-hidden="true" class="fa fa-trash" href="/deleteCart/{{this.product._id}}" onclick="confirmDelete('{{this.product._id}}', event)">Remove</a></p>
					</div>
				</div>
				{{/each}}
						{{#if Error}} <h3 style="font-size: 1.7rem;text-align: center;color: red;"><strong> {{Error}}</strong> </h3> {{/if}}
				
			</div>
			 <div class="right-bar">
        		<p><span>Subtotal</span> <span id="subtotal">{{subtotal}}</span></p>
        		<hr>
        		<p><span>Discount</span> <span id="discount">{{discount}}</span></p>
        		<hr>
        		<p><span>Total</span> <span id="total">{{total}}</span></p>
        		<a href="/checkout" ><i class="fa fa-shopping-cart"></i>Checkout</a>
      		</div>
			
		</div>
	</div>

<script>
   function confirmDelete(itemId, event) {
    event.preventDefault();
    Swal.fire({
        title: 'Are you sure?',
        text: 'You won\'t be able to revert this!',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then(async (result) => {
        if (result.isConfirmed) {
             await fetch(`/deleteCart/${itemId}`);
            Swal.fire('Deleted!', 'Your product has been deleted from cart.', 'success');
            window.location.href = '/cart';
        } else {
            Swal.fire('Cancelled', 'Your product is safe!', 'info');
        }
    });

    }
</script>

<script>
	async function updateCartQuantity(itemId, count) {
      try {
		console.log('fetch called')
        const response = await fetch(`/cartChangeQuantity?id=${itemId}&count=${count}`);
		 if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
        }
        const data = await response.json();
		console.log(data);
		 if (data.success) {
        
			const quantityElement = document.getElementById(itemId);
			console.log('item',quantityElement.value)
        	const subtotalElement = document.getElementById('subtotal');
        	const discountElement = document.getElementById('discount');
        	const totalElement = document.getElementById('total');
		
			const updatedCartData = data.cartData;
			updatedCartData.forEach((item) => {
    		const quantityElement = document.getElementById(item.proId);
    			if (quantityElement) {
					console.log(item.quantity)
        			quantityElement.value = item.quantity;
    			}
			});

		  	if (subtotalElement) {
            subtotalElement.textContent = data.subtotal;
        	}

        	if (discountElement) {
            discountElement.textContent = data.discount;
        	}

        	if (totalElement) {
            totalElement.textContent = data.total;
        	}
           
        	} else {
            
            	Swal.fire({
                	title: 'Error!',
                	text: data.message,
                	icon: 'error',
            	});
       		 }
        
		 } catch (error) {
        console.error('Error updating cart quantity:', error);
		 }
}
</script>

</body>
